@model IEnumerable<ProjectWebAppDBFirst.Models.ServiceCenter>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CertifiedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryTypeNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyTypeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertifiedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryTypeNavigation.Category1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyTypeNavigation.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceCenterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServiceCenterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ServiceCenterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
